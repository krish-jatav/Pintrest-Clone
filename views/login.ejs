    <div id="page-l-3">
        <div class="container">
            <div class="content">
                <!--pinterest logo-->
                <img src="https://i.pinimg.com/originals/d3/d1/75/d3d175e560ae133f1ed5cd4ec173751a.png" alt="pin logo" class="img1" />

                <p class="header">Log in to see more</p>

                <% if(error.length > 0){ %>
                    <p class="err">
                        <%= error %>
                    </p>
                    <% } %>

                        <form action="/login" method="post">
                            <input type="username" name="username" placeholder="username" class="detail" />
                            <input type="password" name="password" placeholder="Password" class="detail" />
                            <input type="submit" class="btn int" value="Login My Account">
                        </form>

                        <a style="text-decoration: none;" href=" /forgot ">Forgot your password?</a>
                        <footer>
                            <p>
                                By continuing, you agree to Pinterest's
                                <b>Terms of Service, Privacy policy.</b>
                            </p>
                            <hr />
                            <a style="text-decoration: none; color: #465af6;" href="/signup">Not on Pinterest yet? Sign up</a>
                        </footer>
            </div>
        </div>
    </div>
